@{
}

@model List<MonthlyClaimMaster.Models.Claim>

<table>
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer ID</th>
            <th>Date Submitted</th>
            <th>Total Payment</th>
            <th>Notes</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimID</td>
                <td>@claim.LecturerID</td>
                <td>@claim.DateSubmitted</td>
                <td>@claim.TotalPayment</td>
                <td>@claim.Notes</td>
                <td>@claim.Status</td>
                <td>
                    <form asp-action="Approve" method="post">
                        <input type="hidden" name="id" value="@claim.ClaimID" />
                        <button type="submit">Approve</button>
                    </form>
                    <form asp-action="Reject" method="post">
                        <input type="hidden" name="id" value="@claim.ClaimID" />
                        <button type="submit">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
